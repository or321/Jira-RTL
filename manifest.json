{
	"name": "Jira RTL",
	"description": "Automatically aligns RTL text in Jira.",
	"version": "0.4.0",
	"manifest_version": 3,
	"action": {
		"default_popup": "popup.html"
	},
	"content_scripts": [
		{
			"matches": [
				"https://*.atlassian.net/*"
			],
			"js": [
				"assets/main.js"
			]
		}
	],
	"web_accessible_resources": [
		{
			"matches": [
				"https://*.atlassian.net/*"
			],
			"resources": [
				"assets/main.css"
			]
		}
	],
	"permissions": [
		"storage",
		"activeTab"
	]
}