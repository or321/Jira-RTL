{
	"name": "Jira RTL",
	"description": "Automatically aligns RTL text in Jira.",
	"version": "0.5.4",
	"manifest_version": 3,
	"action": {
		"default_popup": "popup.html"
	},
	"content_scripts": [
		{
			"matches": [
				"https://*.atlassian.net/*"
			],
			"js": [
				"assets/browser-polyfill.min.js",
				"assets/jira-rtl.js"
			],
			"run_at": "document_start"
		}
	],
	"web_accessible_resources": [
		{
			"matches": [
				"https://*.atlassian.net/*"
			],
			"resources": [
				"assets/jira-rtl.css"
			]
		}
	],
	"permissions": [
		"storage",
		"activeTab"
	]
}