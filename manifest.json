{
	"name": "Jira RTL",
	"description": "Automatically aligns RTL text in Atlassian Jira.",
	"version": "0.5.5",
	"manifest_version": 3,
	"icons": {
		"16": "icons/icon-16-black.png",
		"48": "icons/icon-48-black.png",
		"128": "icons/icon-128-black.png"
	},
	"action": {
		"default_icon": {
			"16": "icons/icon-16-black.png",
			"48": "icons/icon-48-black.png"
		},
		"default_popup": "popup.html"
	},
	"content_scripts": [
		{
			"matches": [
				"https://*.atlassian.net/*"
			],
			"js": [
				"assets/browser-polyfill.min.js",
				"assets/jira-rtl.js"
			],
			"run_at": "document_start"
		}
	],
	"web_accessible_resources": [
		{
			"matches": [
				"https://*.atlassian.net/*"
			],
			"resources": [
				"assets/jira-rtl.css"
			]
		}
	],
	"permissions": [
		"storage"
	]
}