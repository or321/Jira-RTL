{
	"name": "Minimal Jira RTL",
	"description": "Automatically aligns RTL text in Jira.",
	"version": "0.3.0",
	"manifest_version": 3,
	"action": {
		"default_popup": "popup.html"
	},
	
	"content_scripts": [
		{
			"matches": [
				"https://*.atlassian.net/*"
			],
			"js": [
				"dist/jiraRTL.js"
			]
		}
	],
	"permissions": ["storage", "activeTab"]
}